<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <Button
        android:id="@+id/studentPanel"
        android:layout_width="332dp"
        android:layout_height="129dp"
        android:layout_marginTop="60dp"
        android:background="#cae3d0"
        android:fontFamily="@font/robotocondensedbold"
        android:text="Student panel"
        android:gravity="center"

        android:textColor="#6eb4a4"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/teacherPanel"
        android:layout_width="332dp"
        android:layout_height="129dp"
        android:layout_marginTop="56dp"
        android:textStyle="bold"

        android:background="#cae3d0"
        android:fontFamily="@font/robotocondensedbold"
        android:text="Teacher panel"
        android:textColor="#6eb4a4"
        android:textSize="32sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentPanel"
        app:layout_constraintVertical_bias="0.129" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="239dp"
        android:layout_height="164dp"
        android:layout_marginTop="88dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gublogo" />

</androidx.constraintlayout.widget.ConstraintLayout>