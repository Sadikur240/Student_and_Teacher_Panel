<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/tPublishNotice"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#97a1f1"
                android:fontFamily="@font/robotocondensedbold"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="publish notice"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/tUpdateClassLink"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#97a1f1"
                android:fontFamily="@font/robotocondensedbold"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Class time and link"
                android:textSize="24dp" />

            <Button
                android:id="@+id/tUpdateResult"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#97a1f1"
                android:fontFamily="@font/robotocondensedbold"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="update result"
                android:textSize="24dp" />


            <Button
                android:id="@+id/tViewAllStudent"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#97a1f1"
                android:fontFamily="@font/robotocondensedbold"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="View student list"
                android:textSize="24dp"
                />

            <Button
                android:id="@+id/tAddAStudent"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#97a1f1"
                android:fontFamily="@font/robotocondensedbold"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Add a student"
                android:textSize="24dp" />

            <Button
                android:id="@+id/tRemoveAStudent"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#97a1f1"
                android:fontFamily="@font/robotocondensedbold"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Remove a student"
                android:textSize="24dp" />
            <Button
                android:id="@+id/tManageBlood"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#97a1f1"
                android:fontFamily="@font/robotocondensedbold"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Manage Blood"
                android:textSize="24dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>